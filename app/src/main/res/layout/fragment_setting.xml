<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".fragment.SettingFragment">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pengaturan"
      android:textStyle="bold"
      android:textSize="25sp"
      android:layout_gravity="center"
      android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:src="@drawable/profil_placeholder"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textColor="@color/black"
          android:layout_marginTop="15sp"
          android:text="Dava Alhaq Nur Addin"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginTop="10sp"
          android:text="Kampung Karang Anyar Kec.Mergangsang Yogyakarta Indonesia"/>

    </LinearLayout>


  <!--    Edit Profil-->
  <RelativeLayout
      android:id="@+id/btnEditProfil"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:layout_marginHorizontal="25dp"
      android:background="@drawable/bg_primary_gray"
      android:padding="15sp"
      android:layout_marginTop="30dp">

    <ImageView
        android:id="@+id/icKey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_key"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_toRightOf="@+id/icKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profil"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"/>
  </RelativeLayout>

  <!--    Detail Profil-->
  <RelativeLayout
      android:id="@+id/btnDetailProfil"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:layout_marginHorizontal="25dp"
      android:background="@drawable/bg_primary_gray"
      android:padding="15sp"
      android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/icPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_toRightOf="@+id/icPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Profil"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"/>
  </RelativeLayout>

  <!--    Daftar Akun Panitia-->
  <RelativeLayout
      android:id="@+id/btnDaftarAkunPanitia"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:layout_marginHorizontal="25dp"
      android:background="@drawable/bg_primary_gray"
      android:padding="15sp"
      android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/icPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_people"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_toRightOf="@+id/icPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar Akun Panitia"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"/>
  </RelativeLayout>

  <!--    Logout-->
  <RelativeLayout
      android:id="@+id/btnLogout"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      android:layout_marginHorizontal="25dp"
      android:background="@drawable/bg_primary_gray"
      android:padding="15sp"
      android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/icLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logout"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_toRightOf="@+id/icLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profil"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_forward"/>
  </RelativeLayout>

</LinearLayout>